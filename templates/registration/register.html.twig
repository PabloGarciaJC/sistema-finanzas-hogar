{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="contn-wrapper">
		<div class="contn-wrapper__form-1fr">

			<div class="card w-100 mb-3">
				<div class="card-body d-flex flex-column align-items-center">
					<div class="text-center">
						<span class="form__title">Crear una cuenta</span>
					</div>

					{{ form_start(registrationForm, {'attr': {'class': 'w-100'}}) }}
					{{ form_errors(registrationForm) }}

					<div class="mb-3">
						{{ form_label(registrationForm.email) }}
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(registrationForm.email) }}
					</div>

					<div class="mb-3">
						{{ form_label(registrationForm.plainPassword, 'Contraseña') }}
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>

					<div class="form-check mb-3">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
						{{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones', {'label_attr': {'class': 'form-check-label'}}) }}
						{{ form_errors(registrationForm.agreeTerms) }}
					</div>

					<button type="submit" class="btn btn-primary btn-lg w-100">Registrarse</button>
					{{ form_end(registrationForm) }}

				</div>
			</div>
		</div>
	</div>

{% endblock %}
